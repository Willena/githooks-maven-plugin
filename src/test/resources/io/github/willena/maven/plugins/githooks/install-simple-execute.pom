<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.github.willena</groupId>
    <artifactId>githooks-maven-plugin-example</artifactId>
    <version>1.0.0-SNAPSHOT</version>

    <properties>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>io.github.willena</groupId>
                <artifactId>githooks-maven-plugin</artifactId>
                <configuration>
                    <gitConfig>
                        <demo.config>value</demo.config>
                    </gitConfig>
                    <hooks>
                        <hook>
                            <type>PRE_PUSH</type>
                            <hookDefinitions>
                                <hookDefinition>
                                    <name>mojo</name>
                                    <runConfig>
                                        <mojo>
                                            <goal>run</goal>
                                            <plugin>
                                                <groupId>group</groupId>
                                                <artifactId>id</artifactId>
                                                <version>1.2.3</version>
                                            </plugin>
                                            <configuration>
                                                <config>value</config>
                                            </configuration>
                                        </mojo>
                                    </runConfig>
                                </hookDefinition>
                            </hookDefinitions>
                        </hook>
                        <hook>
                            <type>PRE_COMMIT</type>
                            <hookDefinitions>
                                <hookDefinition>
                                    <name>name</name>
                                    <description>This is a simple hook</description>
                                    <runConfig>
                                        <command>
                                            <part>value</part>
                                            <part>value</part>
                                            <part>value</part>
                                        </command>
                                    </runConfig>
                                </hookDefinition>
                                <hookDefinition>
                                    <name>other</name>
                                    <enabled>false</enabled>
                                    <runConfig>
                                        <className>java.lang.String</className>
                                        <args>
                                            <arg>--arg1</arg>
                                            <arg>--value</arg>
                                        </args>
                                    </runConfig>
                                </hookDefinition>
                            </hookDefinitions>
                        </hook>
                    </hooks>
                </configuration>
                <executions>
                    <execution>
                        <id>install-exec</id>
                        <goals>
                            <goal>install</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>